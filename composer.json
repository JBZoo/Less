{
    "name"         : "jbzoo/less",
    "type"         : "library",
    "description"  : "PHP wrapper for any less-compilers",
    "license"      : "MIT",
    "keywords"     : [
        "less", "css", "less.js", "stylesheet",
        "jbzoo", "packagist", "lessc", "gpeasy", "leafo", "lesscss", "compiler"
    ],
    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"      : {
        "php"                : ">=7.2",

        "jbzoo/data"         : "^4.3.0",
        "jbzoo/utils"        : "^4.5.0",
        "wikimedia/less.php" : "^3.1.0"
    },

    "require-dev"  : {
        "jbzoo/toolbox-dev" : "^2.13.1"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\Less\\" : "src"
        }
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "config"       : {
        "optimize-autoloader" : true
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "4.x-dev"
        }
    }
}
