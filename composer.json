{
    "name"              : "jbzoo/less",
    "type"              : "library",
    "description"       : "PHP wrapper for any less-compilers",
    "license"           : "MIT",
    "keywords"          : [
        "less", "css", "less.js", "stylesheet",
        "jbzoo", "packagist", "lessc", "gpeasy", "leafo", "lesscss", "compiler"
    ],
    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"                : ">=7.2",
        "jbzoo/data"         : "^4.0.0",
        "jbzoo/utils"        : "^4.0.0",
        "wikimedia/less.php" : "^3.0.0"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^2.0.0"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\Less\\" : "src"
        }
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "4.0.x-dev"
        }
    }
}
