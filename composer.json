{
    "name"              : "jbzoo/less",
    "type"              : "library",
    "description"       : "PHP wrapper for any less-compilers",
    "license"           : "MIT",
    "keywords"          : [
        "less", "css", "less.js", "stylesheet",
        "jbzoo", "packagist", "lessc", "gpeasy", "leafo", "lesscss", "compiler"
    ],
    "minimum-stability" : "stable",
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"               : ">=7.1",
        "jbzoo/data"        : "^3.0",
        "jbzoo/utils"       : "^3.0",
        "oyejorge/less.php" : "^1.7.0.14"
    },

    "require-dev"       : {
        "jbzoo/phpunit"  : "^3.0",
        "jbzoo/profiler" : "^1.0.5"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\Less\\" : "src"
        }
    },

    "config"            : {
        "optimize-autoloader" : true
    },

    "support"           : {
        "issues" : "https://github.com/JBZoo/Less/issues"
    }
}
